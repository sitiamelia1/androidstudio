<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".follower"
    android:background="@mipmap/bg">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"> </TableLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="My Social Media"
        android:textColor="#FF000080"
        android:textSize="40dp"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:linksClickable="true"
        android:id="@+id/btnfb"
        android:background="@drawable/kotak_email"
        android:drawableRight="@drawable/facebook"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:layout_marginTop="330dp"
        android:textSize="20dp"
        android:textColor="#FF000080"
        android:layout_marginLeft="26dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="141dp"
        android:linksClickable="true"
        android:id="@+id/btnig"
        android:background="@drawable/kotak_email"
        android:drawableRight="@drawable/ig"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:layout_marginTop="330dp"
        android:textSize="20dp"
        android:textColor="#FF000080"
        android:layout_marginLeft="157dp"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="272dp"
        android:layout_marginTop="200dp"
        android:linksClickable="true"
        android:id="@+id/btntwitter"
        android:background="@drawable/kotak_email"
        android:drawableRight="@drawable/twitter"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:layout_marginTop="330dp"
        android:textSize="20dp"
        android:textColor="#FF000080"
        android:layout_marginLeft="300dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="45dp"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/login"
        tools:ignore="NotSibling" />

</RelativeLayout>